<div id="mesaj"></div>
@using (Ajax.BeginForm("Kaydet", "Urun", new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "mesaj" }))
{
    <div class="form-group">
        @Html.LabelFor(m => m.UrunAdi)
        @Html.TextBoxFor(m => m.UrunAdi, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.UrunAdi)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.SonTuketimTarihi)
        @Html.TextBoxFor(m => m.SonTuketimTarihi, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
        @Html.ValidationMessageFor(m => m.SonTuketimTarihi)
    </div>


    <div class="form-group">
        @Html.LabelFor(m => m.ToplamUrunSayisi)
        @Html.TextBoxFor(m => m.ToplamUrunSayisi, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.ToplamUrunSayisi)
    </div>


    <div class="form-group">
        @Html.LabelFor(m => m.Kategori)
        @Html.DropDownListFor(m => m.Kategori, ViewBag.Kategoriler as SelectList, "Select", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Kategori)
    </div>

    @*<div class="form-group">
        @Html.LabelFor(m => m.AssignTo)
        @Html.DropDownListFor(m => m.AssignTo, ViewBag.Users as SelectList, "Select", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.AssignTo)
    </div>*@

    <div class="form-group">
        @Html.LabelFor(m => m.UrunFiyati)
        @Html.TextBoxFor(m => m.UrunFiyati, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.UrunFiyati)
    </div>

    @Html.HiddenFor(m => m.Id)
    <button type="submit" class="btn btn-success">Kaydet</button>
}

@section scripts
{
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}