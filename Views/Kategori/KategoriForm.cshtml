@model PersonelMVCUII.Models.EntityFramework.Kategori
@{
    ViewBag.Title = "PersonelForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Raf Formu</h2>
@using (Html.BeginForm("Kaydet", "Kategori", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Kategoriler)
        @Html.TextBoxFor(m => m.Kategoriler, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Kategoriler)
    </div>




    @Html.HiddenFor(m => m.Id)
    <button type="submit" class="btn btn-default">Kaydet</button>
}

@section scripts
{
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}